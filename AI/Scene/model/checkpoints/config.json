{
    "DRY_RUN": false,
    "EXPR_NAME": "bassl_40epoch",
    "NOTE": "",
    "LOGGING": {
        "LOG_FREQ": 100,
        "CKPT_FREQ": -1
    },
    "TRAINER": {
        "precision": 16,
        "max_epochs": 10,
        "terminate_on_nan": true,
        "flush_logs_every_n_steps": 100,
        "num_sanity_val_steps": 0,
        "gpus":1,
        "num_nodes": 1,
        "sync_batchnorm": true,
        "check_val_every_n_epoch": 1
    },
    "DATASET": "movienet",
    "TEST": {
        "KNN_VALIDATION": true,
        "VAL_FREQ": 1,
        "TRANSFORM": [
            {
                "name": "VideoResizedCenterCrop",
                "image_size": 256,
                "crop_size": 224
            },
            {
                "name": "VideoToTensor",
                "mean": [
                    0.485,
                    0.456,
                    0.406
                ],
                "std": [
                    0.229,
                    0.224,
                    0.225
                ]
            }
        ]
    },
    "TRAIN": {
        "USE_SINGLE_KEYFRAME": true,
        "NUM_KEYFRAME": 3,
        "TRANSFORM": [
            {
                "name": "VideoRandomResizedCrop",
                "size": 224,
                "bottom_area": 0.14
            },
            {
                "name": "VideoRandomHFlip"
            },
            {
                "name": "VideoRandomColorJitter",
                "brightness": 0.2,
                "contrast": 0.2,
                "saturation": 0.2,
                "hue": 0.05,
                "p": 0.8,
                "consistent": false
            },
            {
                "name": "VideoRandomGaussianBlur",
                "radius_min": 0.1,
                "radius_max": 2.0,
                "p": 0.5
            },
            {
                "name": "VideoToTensor",
                "mean": [
                    0.485,
                    0.456,
                    0.406
                ],
                "std": [
                    0.229,
                    0.224,
                    0.225
                ]
            }
        ],
        "BATCH_SIZE": {
            "effective_batch_size": 256,
            "batch_size_per_proc": 16
        },
        "COLLATE_FN": "default_collator",
        "NUM_WORKERS": 1,
        "PIN_MEMORY": false,
        "OPTIMIZER": {
            "name": "lars",
            "weight_decay": 1e-06,
            "momentum": 0.9,
            "betas": [
                0.9,
                0.999
            ],
            "nesterov": false,
            "regularize_bn": false,
            "regularize_bias": false,
            "lr": {
                "base_lr": 0.3,
                "base_lr_batch_size": 256,
                "auto_scale": true,
                "scaled_lr": 0.3
            },
            "scheduler": {
                "name": "cosine_with_linear_warmup",
                "warmup": 0.1
            }
        },
        "TRAIN_ITERS_PER_EPOCH": 6247
    },
    "MODEL": {
        "use_sync_bn": true,
        "shot_encoder": {
            "name": "resnet",
            "resnet": {
                "input_shape": [
                    3,
                    224,
                    224
                ],
                "depth": 50,
                "use_imagenet_pretrained": false,
                "params": {
                    "zero_init_residual": true,
                    "in_channel_dim": 3
                }
            }
        },
        "contextual_relation_network": {
            "enabled": true,
            "name": "trn",
            "params": {
                "trn": {
                    "input_dim": 2048,
                    "is_decoder": false,
                    "add_cross_attention": false,
                    "chunk_size_feed_forward": 0,
                    "attention_probs_dropout_prob": 0.1,
                    "hidden_act": "gelu",
                    "hidden_dropout_prob": 0.1,
                    "hidden_size": 768,
                    "intermediate_size": 3072,
                    "layer_norm_eps": 1e-12,
                    "num_attention_heads": 8,
                    "num_hidden_layers": 2,
                    "pooling_method": "center",
                    "vocab_size": 2048,
                    "neighbor_size": 16
                }
            }
        }
    },
    "LOSS": {
        "shot_scene_matching": {
            "enabled": true,
            "name": "simclr_loss",
            "params": {
                "simclr_loss": {
                    "temperature": 0.1,
                    "head": {
                        "input_dim": 2048,
                        "hidden_dim": 2048,
                        "output_dim": 128
                    }
                }
            }
        },
        "contextual_group_matching": {
            "enabled": true
        },
        "pseudo_boundary_prediction": {
            "enabled": true,
            "num_neg_sample": 1
        },
        "masked_shot_modeling": {
            "enabled": true
        },
        "sampling_method": {
            "name": "bassl",
            "params": {
                "temporal": {
                    "neighbor_size": 8
                },
                "shotcol": {
                    "neighbor_size": 8,
                    "neighbor_interval": 1
                },
                "bassl": {
                    "neighbor_size": 8,
                    "neighbor_interval": 1
                },
                "bassl+shotcol": {
                    "neighbor_size": 8,
                    "neighbor_interval": 1
                }
            }
        }
    },
    "DISTRIBUTED": {
        "NUM_NODES": 4,
        "NUM_PROC_PER_NODE": 4,
        "WORLD_SIZE": 16
    },
    "MODE": "pretrain",
    "PROJ_ROOT": "D:\\bassl\\bassl",
    "DATA_PATH": "D:\\bassl\\bassl\\data\\movienet",
    "IMG_PATH": "D:\\bassl\\bassl\\data\\movienet\\shot_keyframes",
    "FEAT_PATH": "D:\\bassl\\bassl\\data\\movienet\\features",
    "ANNO_PATH": "D:\\bassl\\bassl\\data\\movienet\\anno",
    "CKPT_PATH": "D:\\bassl\\bassl\\checkpoints\\model-v1.ckpt",
    "LOG_PATH": "D:\\bassl\\bassl\\pretrain\\logs"
}
