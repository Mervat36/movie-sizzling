<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <title>Search Results</title>
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/form.css" />
  </head>
  <style>
    html,
    body {
      height: 100%;
      margin: 0;
      display: flex;
      flex-direction: column;
    }
    main {
      flex: 1;
    }
  </style>
  <body>
    <%- include("partials/header") %>
    <main>
      <section class="results-container">
        <h2 class="profile-title" style="text-align: center">Search Results</h2>
        <p class="query-label" style="text-align: center; font-size: 16px;">
          <strong>Search Query:</strong> <%= query %>
        </p>
        <div style="text-align: center; margin-top: 20px; margin-bottom: 20px">
          <a href="/search" class="btn-primary" style="max-width: 200px"
            >Search Again</a
          >
        </div>

        <% if (results && results.length > 0) { %>
        <div class="results-wrapper">
          <% results.forEach(result => { %>
          <div class="result-card">
            <video controls width="100%">
              <source src="<%= result.clip %>" type="video/mp4" />
            </video>
            <div class="result-info">
              <p style="font-weight: 500"><%= result.caption %></p>
              <p style="font-size: 13px; color: #888">
                <%= result.start_time %> â€“ <%= result.end_time %>
              </p>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div
          class="alert error"
          style="margin: 0 auto; text-align: center; max-width: 250px;"
        >
          <%= message || "No relevant scenes were found for this video." %>
        </div>

        <% } %>
      </section>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
