<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/form.css" />
    <meta name="logged-in-email" content="<%= user ? user.email : '' %>" />
  </head>
  <body>
    <%- include('partials/header') %>
    <section class="auth-container">
      <div class="login-box">
        <h2>Forgot Password</h2>
        <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert success"><%= success %></div>
        <% } %> <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert error"><%= error %></div>
        <% } %>
        <div id="loading-spinner" style="display: none" class="spinner-overlay">
          <div class="spinner"></div>
        </div>
        <form id="forgotForm" action="/forgot-password" method="POST">
          <div class="form-group">
            <input
              type="email"
              name="email"
              id="reset-email"
              placeholder="Enter your email"
              value="<%= user ? user.email : '' %>"
              required
            />
          </div>
          <small id="email-match-warning" style="color: red; display: none">
            This is not the email you're currently logged in with.
          </small>
          <button type="submit" class="btn-primary">Send Reset Link</button>
          <div class="auth-links">
            <% if (user) { %>
            <a href="/profile">Back to Profile</a>
            <% } else { %>
            <a href="/login">Back to Login</a>
            <% } %>
          </div>
        </form>
      </div>
    </section>
    <%- include('partials/footer') %>
    <script src="/js/form-loader.js"></script>
  </body>
</html>
