<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <title>Search History</title>
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/history.css" />
    <style>
      video {
        max-width: 200px;
        border-radius: 10px;
      }
      .btn-download {
        padding: 6px 10px;
        background-color: #0f4662;
        color: white;
        border-radius: 5px;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <%- include("partials/header") %>
    <section class="history-section">
      <h2 class="center-title">Search History</h2>

      <div class="history-table-wrapper">
        <table class="history-table">
          <thead>
            <tr>
              <th>Query Text</th>
              <th>Retrieved Scene</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (queries.length === 0) { %>
              <tr><td colspan="3" style="text-align:center;">No search history found.</td></tr>
            <% } else { %>
              <% queries.forEach(item => { %>
              <tr>
                <td><%= item.query %></td>
                <td>
                  <video controls>
                    <source src="<%= item.resultVideoUrl %>" type="video/mp4" />
                    Your browser does not support the video tag.
                  </video>
                </td>
                <td>
                  <a
                    href="<%= item.resultVideoUrl %>"
                    download
                    class="btn-download"
                    >Download</a
                  >
                </td>
              </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>
    <%- include("partials/footer") %>
  </body>
</html>
