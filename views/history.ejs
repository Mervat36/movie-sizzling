<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <title>Search History</title>
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/history.css" />
    <script defer src="/js/history.js"></script>
  </head>
  <body class="layout-body">
    <%- include("partials/header") %>
    <main class="layout-main">
      <section class="history-section">
        <h2 class="center-title">Search History</h2>
        <div class="history-table-wrapper">
          <table class="history-table">
            <thead>
              <tr>
                <th>Query Text</th>
                <th>Retrieved Scenes</th>
              </tr>
            </thead>
            <tbody>
              <% if (queries.length === 0) { %>
              <tr>
                <td colspan="2" style="text-align: center">
                  No search history found.
                </td>
              </tr>
              <% } else { %> <% queries.forEach((item, index) => { %>
              <tr>
                <td><%= item.query %></td>
                <td>
                  <% if (item.videos && item.videos.length > 0) { %>
                  <div
                    class="video-container"
                    data-index="0"
                    data-videos="<%- JSON.stringify(item.videos.map(v => ({ url: v.url, caption: v.caption }))) %>"
                  >
                    <button class="prev-btn">&#8249;</button>

                    <video controls>
                      <source
                        src="<%= item.videos[0].url %>"
                        type="video/mp4"
                      />
                    </video>

                    <div class="caption">
                      <div><%= item.videos[0].caption %></div>
                      <% if (item.videos[0].startTime && item.videos[0].endTime)
                      { %>
                      <div class="time-range">
                        <%= item.videos[0].startTime %> â€“ <%=
                        item.videos[0].endTime %>
                      </div>
                      <% } %>
                    </div>

                    <div class="actions">
                      <a
                        href="<%= item.videos[0].url %>"
                        download
                        class="btn-download"
                        >Download</a
                      >

                      <form
                        action="/history/remove"
                        method="POST"
                        style="display: inline"
                      >
                        <input
                          type="hidden"
                          name="videoUrl"
                          value="<%= item.videos[0].url %>"
                        />
                        <button type="submit" class="btn-remove">Remove</button>
                      </form>
                    </div>

                    <button class="next-btn">&#8250;</button>
                  </div>
                  <% } else { %>
                  <p>No video results available.</p>
                  <% } %>
                </td>
              </tr>
              <% }) %> <% } %>
            </tbody>
          </table>
        </div>
      </section>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
