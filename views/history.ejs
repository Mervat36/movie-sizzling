<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search History</title>
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body>
    <%- include("header") %>

    <div class="container">
        <h2>Search History</h2>
        <table>
            <thead>
                <tr>
                    <th>Query Text</th>
                    <th>Retrieved Scene</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% history.forEach(search => { %>
                    <tr>
                        <td><%= search.query %></td>
                        <td><img src="<%= search.sceneThumbnail %>" class="thumbnail"></td>
                        <td><a href="/scene-history?id=<%= search.id %>">View</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <%- include("footer") %>
</body>
</html>
