<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <title>Search History</title>
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/history.css" />
    <style>
      video {
        max-width: 200px;
        border-radius: 10px;
      }
      .btn-download {
        padding: 6px 10px;
        background-color: #0f4662;
        color: white;
        border-radius: 5px;
        text-decoration: none;
      }

      .pagination {
        margin-top: 20px;
        text-align: center;
      }

      .pagination a {
        display: inline-block;
        padding: 8px 12px;
        margin: 0 5px;
        background-color: #0f4662;
        color: white;
        text-decoration: none;
        border-radius: 4px;
      }

      .pagination a.active {
        background-color: #2c8dbb;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <%- include("partials/header") %>
    <section class="history-section">
      <h2 class="center-title">Search History</h2>

      <div class="history-table-wrapper">
        <table class="history-table">
          <thead>
            <tr>
              <th>Query Text</th>
              <th>Retrieved Scene</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (queries.length === 0) { %>
              <tr><td colspan="3" style="text-align:center;">No search history found.</td></tr>
            <% } else { %>
              <% queries.forEach(item => { %>
              <tr>
                <td><%= item.query %></td>
                <td>
                  <video controls>
                    <source src="<%= item.resultVideoUrl %>" type="video/mp4" />
                    Your browser does not support the video tag.
                  </video>
                </td>
                <td>
                  <a
                    href="<%= item.resultVideoUrl %>"
                    download
                    class="btn-download"
                    >Download</a
                  >
                </td>
              </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>

        <% if (totalPages > 1) { %>
          <div class="pagination">
            <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %>">&laquo; Prev</a>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
            <% } %>
          </div>
        <% } %>
      </div>
    </section>
    <%- include("partials/footer") %>
  </body>
</html>
