<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/reset-password.css" />
  </head>
  <body>
    <div class="reset-container">
      <%- include("header")%>
      <h2>Reset Password</h2>
      <!-- Alerts for error or success -->
      <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert error"><%= error %></div>
      <% } %>
      <div id="loading-spinner" style="display: none;" class="spinner-overlay">
        <div class="spinner"></div>
      </div>
      <form action="/reset-password/<%= token %>" method="POST" id="resetForm">
        <div class="form-group password-wrapper">
          <label for="password">New Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Create a new password"
          />
          <div id="passwordWarning" class="alert error" style="display: none">
            Password must be at least 9 characters and contain a letter and a
            special character.
          </div>
        </div>
        <div class="form-group password-wrapper">
          <label for="confirmPassword">Confirm New Password</label>
          <input
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            placeholder="Re-enter your new password"
          />
          <div id="passwordMismatch" class="alert error" style="display: none">
            Passwords do not match.
          </div>
        </div>
        <button type="submit" class="btn-primary">Change Password</button>
      </form>
    </div>

    <script src="/js/field-validation.js"></script>
    <script src="/js/password-toggle.js"></script>
    <script src="/js/form-loader.js"></script>
    <%- include("footer")%>
  </body>
</html>
